# Netflix-data-Analysis
Netflix Dataset cleaning and analysis using Python, pandas and Matplotlib. 

# netflix_analysis.py

# ðŸ“Œ Step 1: Import libraries
import pandas as pd
import matplotlib.pyplot as plt

# ðŸ“Œ Step 2: Load dataset
df = pd.read_csv("netflix_titles.csv")

# ðŸ“Œ Step 3: Basic info
print("Dataset Shape:", df.shape)
print("\nColumns:", df.columns)
print("\nMissing values:\n", df.isnull().sum())

# ðŸ“Œ Step 4: Data Cleaning
# Fill missing values
df['country'].fillna("Unknown", inplace=True)
df['date_added'].fillna("Unknown", inplace=True)
df['rating'].fillna("Unknown", inplace=True)

# Drop duplicates if any
df.drop_duplicates(inplace=True)

print("\nAfter Cleaning:")
print(df.isnull().sum())

# ðŸ“Œ Step 5: Basic Analysis
print("\nTotal Movies:", df[df['type'] == "Movie"].shape[0])
print("Total TV Shows:", df[df['type'] == "TV Show"].shape[0])

# Count by country
top_countries = df['country'].value_counts().head(10)
print("\nTop 10 countries producing content:\n", top_countries)

# ðŸ“Œ Step 6: Visualization
# Movies vs TV Shows
df['type'].value_counts().plot(kind='bar', color=['skyblue', 'lightgreen'])
plt.title("Movies vs TV Shows on Netflix")
plt.xlabel("Type")
plt.ylabel("Count")
plt.savefig("movies_vs_tvshows.png")
plt.show()

# Top 10 Countries
top_countries.plot(kind='barh', color='orange')
plt.title("Top 10 Content Producing Countries")
plt.xlabel("Count")
plt.ylabel("Country")
plt.savefig("top_countries.png")
plt.show()


